<?xml version="1.0"?>

<!DOCTYPE web-app PUBLIC
   "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
   "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <description>Servlets HelpDesk</description>

   <!-- SERVLETS -->
   
   <servlet>
      <servlet-name>RegistrarCliente</servlet-name>
      <servlet-class>uniandes.cupi2.helpDesk.Servlets.ServletRegistrarCliente</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>Login</servlet-name>
      <servlet-class>uniandes.cupi2.helpDesk.Servlets.ServletLogin</servlet-class>
   </servlet>
   
   <servlet>
   	<servlet-name>NuevoTicket</servlet-name>
   	<servlet-class>uniandes.cupi2.helpDesk.Servlets.ServletNuevoTicket</servlet-class>
   </servlet>

   <servlet>
   	<servlet-name>VerTicketCliente</servlet-name>
   	<servlet-class>uniandes.cupi2.helpDesk.Servlets.ServletVerTicketCliente</servlet-class>
   </servlet>

   <servlet>
   	<servlet-name>VerTicketEmpleado</servlet-name>
   	<servlet-class>uniandes.cupi2.helpDesk.Servlets.ServletVerTicketEmpleado</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>Cliente</servlet-name>
      <servlet-class>uniandes.cupi2.helpDesk.Servlets.ServletCliente</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>Empleado</servlet-name>
      <servlet-class>uniandes.cupi2.helpDesk.Servlets.ServletEmpleado</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>TicketsALaFecha</servlet-name>
      <servlet-class>uniandes.cupi2.helpDesk.Servlets.ServletTicketsALaFecha</servlet-class>
   </servlet>

   <!-- MAPPING -->
	
   <servlet-mapping>
      <servlet-name>RegistrarCliente</servlet-name>
      <url-pattern>/registrarCliente2.htm</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>Login</servlet-name>
      <url-pattern>/login.htm</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>NuevoTicket</servlet-name>
   	<url-pattern>/nuevoTicket.htm</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>VerTicketCliente</servlet-name>
   	<url-pattern>/verTicketCliente.htm</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>VerTicketEmpleado</servlet-name>
   	<url-pattern>/verTicketEmpleado.htm</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>Cliente</servlet-name>
   	<url-pattern>/cliente.htm</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
   	<servlet-name>Empleado</servlet-name>
   	<url-pattern>/empleado.htm</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
   	<servlet-name>TicketsALaFecha</servlet-name>
   	<url-pattern>/ticketsALaFecha.htm</url-pattern>
   </servlet-mapping>
</web-app>
