<?xml version="1.0"?>

<!DOCTYPE web-app PUBLIC
   "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
   "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <description>Servlets HelpDesk</description>

   <!-- SERVLETS -->
   
   <servlet>
      <servlet-name>RegistrarCliente</servlet-name>
      <servlet-class>uniandes.cupi2.helpDesk.iterfazServlets.ServletRegistrarCliente</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>Login</servlet-name>
      <servlet-class>uniandes.cupi2.helpDesk.iterfazServlets.ServletLogin</servlet-class>
   </servlet>
   <servlet>
   	<servlet-name>NuevoTicket</servlet-name>
   	<servlet-class>uniandes.cupi2.helpDesk.interfazServlets.ServletNuevoTicket</servlet-class>
   </servlet>


   <!-- MAPPING -->
	
   <servlet-mapping>
      <servlet-name>RegistrarCliente</servlet-name>
      <url-pattern>/registrarCliente.htm</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>Login</servlet-name>
      <url-pattern>/login.htm</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
   	<servlet-name>NuevoTicket</servlet-name>
   	<url-pattern>/nuevoTicket.htm</url-pattern>
   </servlet-mapping>

</web-app>
